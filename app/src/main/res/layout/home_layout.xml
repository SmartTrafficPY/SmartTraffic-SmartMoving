<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools = "http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/drawer"
    tools:openDrawer= "left"
    android:layout_width="match_parent"
    android:layout_height="match_parent">



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <org.osmdroid.views.MapView
            android:id="@+id/mapview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />
        <ImageView
            android:id="@+id/markerdestination"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/target"
            android:visibility="invisible"
            />
        <include
            android:id="@+id/toolbar"
            layout="@layout/toolbar"/>

        <ImageButton
            android:id="@+id/sharebtn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="100dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/btnshare"
            android:visibility="invisible"
            android:src="@drawable/share" />
        <TextView
            android:id="@+id/tv1"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="142dp"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:text="Guardar y \nCompartir"/>

        <ImageButton
            android:id="@+id/confirmreport"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="180dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/btn_circle"
            android:src="@drawable/check"
            android:visibility="invisible" />
        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:visibility="invisible"
            android:layout_marginTop="220dp"
            android:layout_marginRight="25dp"
            android:layout_alignParentEnd="true"
            android:text="Guardar"/>


        <ImageButton
            android:id="@+id/deletereport"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="240dp"
            android:layout_marginEnd="32dp"
            android:layout_marginRight="32dp"
            android:visibility="invisible"
            android:background="@drawable/circlered"
            android:src="@drawable/resetclose" />
        <TextView
            android:id="@+id/tv3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="282dp"
            android:visibility="invisible"
            android:layout_marginRight="20dp"
            android:layout_alignParentEnd="true"
            android:text="Cancelar"/>
        <ImageButton
            android:id="@+id/startnav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:layout_marginTop="280dp"
            android:visibility="visible"
            android:background="@drawable/btn_circle"
            android:src="@drawable/go" />
        <ImageButton
            android:id="@+id/cancelnav"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginRight="32dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="100dp"
            android:visibility="invisible"
            android:background="@drawable/circlered"
            android:src="@drawable/resetclose" />


        <HorizontalScrollView
            android:id="@+id/scrollPartition"
            android:layout_width="match_parent"
            android:layout_height="@dimen/scroll_view_width"
            android:layout_alignParentBottom="true"
            android:background="#5CFFFFFF"
            android:contextClickable="true"
            android:outlineSpotShadowColor="@color/transparent"
            android:scrollbars="none">



            <LinearLayout
                android:id="@+id/lytPartition"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:background="#8DFFFFFF"
                android:scrollbars="none">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#5CFFFFFF">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#5CFFFFFF"
                        android:text="Reportar:"
                        android:textColor="#000000"/>

                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#8DFFFFFF"
                    android:layout_gravity="end"
                    android:gravity="fill_vertical">

                    <ImageButton
                        android:id="@+id/curbramppoi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/wheelchairramp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/curbramppoi"
                        android:layout_marginTop="48dp"
                        android:background="#8DFFFFFF"
                        android:text="Rampa   \n adecuada"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="#8DFFFFFF"
                    android:gravity="fill_vertical">

                    <ImageButton
                        android:id="@+id/bustoppoi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:longClickable="true"
                        android:background="@mipmap/accessiblebuspoi" />

                    <TextView
                        android:id="@+id/textviewbusstop"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/bustoppoi"
                        android:background="#8DFFFFFF"
                        android:lines="3"
                        android:gravity="center_horizontal"
                        android:singleLine="false"
                        android:text="Parada en que \n pasa  Bus \n accesible"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="#8DFFFFFF"
                    android:gravity="fill_vertical">

                    <ImageButton
                        android:id="@+id/pos1dra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/sidewalkwarning" />

                    <TextView
                        android:id="@+id/textview1"
                        android:layout_width="wrap_content"
                        android:background="#8DFFFFFF"
                        android:gravity="center_horizontal"
                        android:layout_below="@id/pos1dra"
                        android:layout_height="match_parent"
                        android:text="  Vereda mal    \n estado"
                        android:textAlignment="center"
                        android:textColor="#000000" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="#8DFFFFFF"
                    android:gravity="fill_vertical">

                    <ImageButton
                        android:id="@+id/pos2dra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/pendiente" />

                    <TextView
                        android:id="@+id/textview2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/pos2dra"
                        android:text="Pendiente   "
                        android:background="#8DFFFFFF"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="#8DFFFFFF"
                    android:gravity="fill_vertical">

                    <ImageButton
                        android:id="@+id/pos3dra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/carinsidewalk"/>

                    <TextView
                        android:id="@+id/textview3"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/pos3dra"
                        android:background="#8DFFFFFF"
                        android:text="  Auto en  \n vereda"
                        android:textAlignment="center"
                        android:textColor="#000000" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="#8DFFFFFF"
                    android:gravity="fill_vertical">

                    <ImageButton
                        android:id="@+id/pos4dra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/obstacle" />

                    <TextView
                        android:id="@+id/textview4"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="ObstÃ¡culo "
                        android:layout_below="@id/pos4dra"
                        android:background="#8DFFFFFF"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="#8DFFFFFF"
                    android:gravity="fill_vertical">

                    <ImageButton
                        android:id="@+id/pos5dra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/uneven" />

                    <TextView
                        android:id="@+id/textview5"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/pos5dra"
                        android:text="Calle \n empedrada "
                        android:background="#8DFFFFFF"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="#8DFFFFFF"
                    android:gravity="fill_vertical">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/nosidewalkredpoii"
                        android:id="@+id/pos6dra"
                         />

                    <TextView
                        android:id="@+id/textview6"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/pos6dra"
                        android:background="#8DFFFFFF"
                        android:text="Vereda \n inexistente "
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="#8DFFFFFF"
                    android:gravity="fill_vertical">

                    <ImageButton
                        android:id="@+id/pos7dra"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/stairredpoii" />

                    <TextView
                        android:id="@+id/textview7"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/pos7dra"
                        android:background="#8DFFFFFF"
                        android:text="Escalera \n o \n grada"
                        android:textAlignment="center"
                        android:textColor="#000000" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="end"
                    android:background="#8DFFFFFF"
                    android:gravity="fill_vertical">

                    <ImageButton
                        android:layout_width="wrap_content"
                        android:id="@+id/pos8dra"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:background="@mipmap/norampredpoii" />

                    <TextView
                        android:id="@+id/textview8"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_below="@id/pos8dra"
                        android:background="#5CFFFFFF"
                        android:text="Rampa \n inadecuada o \n inexistente"
                        android:textAlignment="center"
                        android:textColor="#000000" />

                </RelativeLayout>
            </LinearLayout>


        </HorizontalScrollView>
    </RelativeLayout>

</android.support.v4.widget.DrawerLayout>